    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rtcon'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rtcon",
                    "--package=rtcon"
                ],
                "filter": {
                    "name": "rtcon",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rtcon'",
